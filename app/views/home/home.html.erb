<h1>Welcome, <%= current_user.name %>!</h1>
<div id="sidebar">
  <%= link_to "Edit my info", edit_user_path(current_user) %><br />
  <%= link_to 'Create a new to-do list', new_user_task_list_path(current_user) %>
</div>
<div id="main_div">
  <div id="my_task_lists">
    <h2>Your task lists</h2>
    <%= render current_user.task_lists %>
  </div>
  <div id="my_watched_lists">
    <h2>Task lists you are watching</h2>
    <%= render current_user.watching_task_lists %>
  </div>
</div>
